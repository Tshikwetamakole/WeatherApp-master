<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherAppp.MainPage"
             BackgroundColor="#f0f2f5">

    <ScrollView>
        <Grid RowSpacing="20" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar with Custom Styling -->
            <Frame Grid.Row="0" 
                   Padding="5"
                   BackgroundColor="White"
                   CornerRadius="30"
                   HasShadow="True"
                   BorderColor="Transparent">
                <SearchBar x:Name="CitySearchBar"
                          Placeholder="Search city..."
                          PlaceholderColor="#666666"
                          BackgroundColor="Transparent"
                          SearchCommand="{Binding SearchCommand}"
                          SearchCommandParameter="{Binding Text, Source={x:Reference CitySearchBar}}" />
            </Frame>

            <!-- Location Button -->
            <Button Grid.Row="1"
                    x:Name="GetLocationButton"
                    Text="📍 Use Current Location"
                    SemanticProperties.Hint="Gets weather for current location"
                    Command="{Binding GetLocationCommand}"
                    HorizontalOptions="Center"
                    BackgroundColor="#4a90e2"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="40"
                    Padding="20,0"/>

            <!-- Weather Information Card -->
            <Frame Grid.Row="2"
                   BackgroundColor="White"
                   CornerRadius="20"
                   HasShadow="True"
                   BorderColor="Transparent"
                   Padding="20">
                <Grid RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- City Name -->
                    <VerticalStackLayout Grid.Row="0" 
                                       Spacing="5"
                                       HorizontalOptions="Center">
                        <Label Text="📍" 
                               FontSize="24"
                               HorizontalOptions="Center"/>
                        <Label x:Name="CityLabel"
                               Text="City"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Coordinates -->
                    <Frame Grid.Row="1"
                           BackgroundColor="#f8f9fa"
                           CornerRadius="15"
                           Padding="10"
                           HasShadow="False"
                           HorizontalOptions="Center">
                        <HorizontalStackLayout Spacing="15">
                            <Label x:Name="LatitudeLabel"
                                   Text="Lat: --"
                                   FontSize="16"
                                   TextColor="#666666"/>
                            <Label Text="•"
                                   TextColor="#666666"
                                   FontSize="16"/>
                            <Label x:Name="LongitudeLabel"
                                   Text="Long: --"
                                   FontSize="16"
                                   TextColor="#666666"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Temperature -->
                    <VerticalStackLayout Grid.Row="2" 
                                       Spacing="10"
                                       HorizontalOptions="Center">
                        <Label x:Name="TemperatureLabel"
                               Text="--°C"
                               FontSize="64"
                               FontAttributes="Bold"
                               TextColor="#4a90e2"
                               HorizontalOptions="Center"/>
                        <Label x:Name="WeatherDescriptionLabel"
                               Text="Weather Description"
                               FontSize="20"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Separator -->
                    <BoxView Grid.Row="3"
                            HeightRequest="1"
                            Color="#f0f0f0"
                            Margin="0,10"/>

                    <!-- Additional Weather Details -->
                    <Frame Grid.Row="4"
                           BackgroundColor="#f8f9fa"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout Spacing="10"
                                                 HorizontalOptions="Center">
                                <Label Text="💧"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Label x:Name="HumidityLabel"
                                       Text="Humidity: --"
                                       FontSize="18"
                                       TextColor="#666666"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>